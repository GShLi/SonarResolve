# SonarQube配置
SONARQUBE_URL=https://your-sonarqube-server.com
SONARQUBE_TOKEN=your_sonarqube_token
SONARQUBE_FETCH_CODE_SNIPPET=true

# Jira配置
JIRA_URL=https://your-jira-instance.atlassian.net
JIRA_API_TOKEN=your_jira_api_token
JIRA_PROJECT_LEAD=admin
JIRA_TASK_PREFIX=[质量管理]
JIRA_INCLUDE_CODE_SNIPPET=true
JIRA_CODE_CONTEXT_LINES=3
# 单次运行创建JIRA任务的最大数量限制（0表示无限制）
JIRA_MAX_TASKS_PER_RUN=50

# GitLab配置（用于创建Merge Request和仓库管理）
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=your_gitlab_token

# 本地工作目录配置（自动创建基于项目名的子目录）
# Windows示例: C:\workspace
# Linux/Mac示例: /home/user/workspace 或 ./workspace
LOCAL_WORKSPACE=/path/to/local/workspace

# AI模型配置（使用LangChain对接，可选）
AI_PROVIDER=openai
# OpenAI配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
# Anthropic配置  
ANTHROPIC_API_KEY=your_anthropic_api_key
# AI模型选择
# OpenAI模型: gpt-4, gpt-4-turbo, gpt-3.5-turbo
# Anthropic模型: claude-3-5-sonnet-20241022, claude-3-haiku-20240307, claude-3-sonnet-20240229
AI_MODEL=gpt-4
# AI模型参数
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=4000

# 日志配置
LOG_LEVEL=INFO
# 日志文件存储路径（相对于项目根目录）
LOG_FILE_PATH=logs/sonar_resolve.log
# 日志文件最大大小（MB）
LOG_MAX_SIZE=10
# 保留的日志备份文件数量
LOG_BACKUP_COUNT=5
# 日志格式
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 数据库配置
# 数据库文件存储路径（相对于项目根目录）
DATABASE_PATH=db/project_status.db
# 是否启用数据库自动备份
DATABASE_BACKUP=false

# 调度器配置
# 是否启用定时调度器
SCHEDULER_ENABLED=false
# Cron表达式 (分 时 日 月 周) - 默认每天凌晨2点执行
SCHEDULER_CRON_EXPRESSION=0 2 * * *
# 调度器时区
SCHEDULER_TIMEZONE=Asia/Shanghai

# MR状态同步配置
# 是否启用MR状态同步
MR_SYNC_ENABLED=true
# MR状态同步的Cron表达式，默认每10分钟执行一次
MR_SYNC_CRON_EXPRESSION=*/10 * * * *
# MR状态同步时查询最近几天的MR
MR_SYNC_DAYS_BACK=7

# AI代码修复配置
# 是否启用AI代码修复
AI_FIXER_ENABLED=false
# AI代码修复的Cron表达式，默认每6小时执行一次
AI_FIXER_CRON_EXPRESSION=0 */6 * * *
# AI代码修复单次处理的最大问题数量
AI_FIXER_MAX_ISSUES=10
